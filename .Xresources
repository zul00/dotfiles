! basic
! as recommended from ArchWiki
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! URxvt
URxvt.font: xft: Inconsolata for Powerline:\
            size=10:hinting=true:antialias=true:style=Medium,\
            xft: FontAwesome:size=10

URxvt.boldFont: xft: Inconsolata for Powerline:\
            size=10:bold:hinting=true:antialias=true:style=Medium
URxvt.scrollBar: False
URxvt.depth:     24

xterm*VT100*width: true
xterm*VT100*faceName: inconsolata:size=9:antialias=false
xterm.scrollBar: False
xterm.depth:     24

! ROFI
!                  bg       border   separator
rofi.color-window: #32302f, #a89984, #a89984

!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #32302f, #ebdbb2, #3c3836, #665c54, #fbf1c7
rofi.color-active: #d79921, #32302f, #d79921, #fabd2f, #32302f
rofi.color-urgent: #cc241d, #32302f, #cc241d, #fb4934, #32302f

