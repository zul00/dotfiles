! basic
! as recommended from ArchWiki
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! URxvt
URxvt.font: xft:\
    inconsolata:size=10:hinting=true:antialias=true\
    for Powerline:size=10:style=Medium
URxvt.scrollBar: False
URxvt.depth:     24

xterm*VT100*width: true
xterm*VT100*faceName: inconsolata:size=9:antialias=false
xterm.scrollBar: False
xterm.depth:     24

! special
*.foreground:   #c5c8c6
*.background:   #1d1f21
*.cursorColor:  #c5c8c6

! black
*.color0:       #1d1f21
*.color8:       #969896

! red
*.color1:       #cc342b
*.color9:       #cc342b

! green
