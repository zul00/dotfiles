#!/bin/sh

case $BLOCK_BUTTON in
	1) pavucontrol & ;;
	2) pactl set-sink-mute @DEFAULT_SINK@ toggle ;;
	4) pactl set-sink-volume @DEFAULT_SINK@ +5% ;;
	5) pactl set-sink-volume @DEFAULT_SINK@ -5% ;;
	3) notify-send "ðŸ”ˆ Audio sink" "$(~/bin/which_audio_sink.sh)" ;;
esac

# [ "$(pactl get-sink-mute @DEFAULT_SINK@)" = "Mute: yes" ] && printf "ðŸ”‡\\n" && exit

vol=$(pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}')

if [ "$(pactl get-sink-mute @DEFAULT_SINK@)" = "Mute: yes" ]; then
    icon="ðŸ”‡"
elif [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

if [ "$(pactl get-source-mute @DEFAULT_SOURCE@)" = "Mute: yes" ]; then
    micicon="ï„±"
else
    micicon="ï„°"
fi

printf "%s %s %s\\n" "$icon" "$vol" "$micicon"
