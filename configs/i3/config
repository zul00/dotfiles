    bindsym $mod+Shift+0 move container to workspace $ws10
## }}}

## {{{ Layout stuff:
    # Toggle split orientation
    bindsym $mod+v split toggle

    # Fullscreen
    bindsym $mod+f fullscreen toggle

    # Container layout: tabbed/ split
    bindsym $mod+Shift+t        layout toggle split
    bindsym $mod+t              layout tabbed

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space    floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space          focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

    # focus the child container
    #bindsym $mod+d focus child
## }}}

## {{{ System command
    bindsym Pause   exec --no-startup-id "~/bin/dmenu/systemcmd"
    bindsym $mod+F9 exec --no-startup-id "~/bin/dmenu/systemcmd"
    bindsym $mod+F12 exec --no-startup-id "playerctl pause; loginctl lock-session"
## }}}

## {{{ Scratchpad:
    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
## }}}

## {{{ Scripts
    # Toggle lang
    # bindsym $mod+F7 exec --no-startup-id "~/dotfiles/scripts/toggle_xkb.sh"

    ## Display
    bindsym XF86Display exec --no-startup-id "~/bin/dmenu/display"
    bindsym $mod+F7         exec --no-startup-id "~/bin/dmenu/display"
    bindsym $mod+Shift+F7   exec --no-startup-id "~/bin/dmenu/display_primary"

    ## Touchpad Toggle
    bindsym XF86TouchpadToggle exec --no-startup-id "~/bin/toggle_toucpad.sh"

    ## printscreen
    bindsym Shift+Print --release\
        exec scrot --freeze -shole '%Y-%m-%d_%HH-%MM-%SS_scrot.png' -e 'xclip -selection clipboard -target image/png -i $f && mv $f ~/Pictures/screenshots/'

    bindsym Print --release\
                exec scrot --freeze --select '%Y-%m-%d_%HH-%MM-%SS_scrot.png' -e 'xclip -selection clipboard -target image/png -i $f && mv $f ~/Pictures/screenshots/'

    ## Vimwiki
    bindsym $mod+n exec $term -T "Vimwiki" -e nvim "+:VimwikiIndex"

    ## File explorer
    bindsym $mod+Shift+e exec "nautilus"

    ## GUI settings
    bindsym $mod+s exec gui_settings;
## }}}

## {{{ MediaKey
    # Brightness
    bindsym XF86MonBrightnessDown   exec brightnessctl set 10%-
    bindsym XF86MonBrightnessUp     exec brightnessctl set 10%+

    # Volume
    bindsym $mod+F1                 exec pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+10 i3blocks
    bindsym XF86AudioMute           exec pactl set-sink-mute @DEFAULT_SINK@ toggle && pkill -RTMIN+10 i3blocks

    bindsym $mod+F3                 exec pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+10 i3blocks
    bindsym XF86AudioRaiseVolume    exec pactl set-sink-volume @DEFAULT_SINK@ +5% && pkill -RTMIN+10 i3blocks

    bindsym $mod+F2                 exec pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+10 i3blocks
    bindsym XF86AudioLowerVolume    exec pactl set-sink-volume @DEFAULT_SINK@ -5% && pkill -RTMIN+10 i3blocks

    bindsym XF86AudioMicMute        exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+10 i3blocks
    bindsym $mod+F4                 exec pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+10 i3blocks

    bindsym $mod+Up     exec "playerctl -a stop"
    bindsym $mod+Down   exec "playerctl --player=vlc,spotify,firefox play-pause"
    bindsym $mod+Right  exec "playerctl --player=vlc,spotify,firefox next"
    bindsym $mod+Left   exec "playerctl --player=vlc,spotify,firefox previous"
## }}}
