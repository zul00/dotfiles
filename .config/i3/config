# BindKey
## Power Management
#http://www.michaelabrahamsen.com/posts/custom-lockscreen-i3lock/
#set $Locker "xautolock -locknow"
set $Locker "~/scripts/lockscreen/lockscreen.sh"
set $LockerSusp "systemctl suspend"

set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $LockerSusp, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym Pause mode "$mode_system"

## Display
set $display_toggle "~/scripts/display/toggle_display.sh"
set $mode_display Display (h) left, (j) down, (k) up, (l) right, (o) off, (m) same
mode "$mode_display" {
    bindsym h exec --no-startup-id "/home/zul/scripts/display/display.sh left" restart mode "default"
    bindsym l exec --no-startup-id "/home/zul/scripts/display/display.sh right" restart mode "default"
    bindsym k exec --no-startup-id "/home/zul/scripts/display/display.sh above" restart mode "default"
    bindsym j exec --no-startup-id "/home/zul/scripts/display/display.sh below" restart mode "default"
    bindsym m exec --no-startup-id "/home/zul/scripts/display/display.sh same" restart mode "default"
    bindsym o exec --no-startup-id "/home/zul/scripts/display/display.sh off" restart mode "default"
    bindsym a exec --no-startup-id "arandr" mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym XF86Display mode "$mode_display"

## Touchpad Toggle
bindsym XF86TouchpadToggle exec --no-startup-id "~/scripts/toggle_toucpad.sh"

## MediaKey
set $unmute_script amixer set -q Speaker unmute && amixer -q set Headphone unmute
bindsym XF86AudioMute exec amixer -q set Master toggle && amixer -q set Speaker toggle && amixer -q set Headphone toggle && pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute && $unmute_script && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute && $unmute_script && pkill -RTMIN+10 i3blocks
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

## printscreen
bindsym Print --release\
            exec scrot -s '%Y-%m-%d_%HH-%MM-%SS_scrot.png' -d 1 -e 'mv $f ~/Pictures/screenshots/'
