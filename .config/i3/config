## resize
mode "resize" {
        bindsym h resize shrink width 30 px or 30 ppt
        bindsym j resize grow height 30 px or 30 ppt
        bindsym k resize shrink height 30 px or 30 ppt
        bindsym l resize grow width 30 px or 30 ppt
        bindsym Shift+h resize shrink width 5 px or 5 ppt
        bindsym Shift+j resize grow height 5 px or 5 ppt
        bindsym Shift+k resize shrink height 5 px or 5 ppt
        bindsym Shift+l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 30 px or 30 ppt
        bindsym Down resize grow height 30 px or 30 ppt
        bindsym Up resize shrink height 30 px or 30 ppt
        bindsym Right resize grow width 30 px or 30 ppt
        bindsym Shift+Left resize shrink width 5 px or 5 ppt
        bindsym Shift+Down resize grow height 5 px or 5 ppt
        bindsym Shift+Up resize shrink height 5 px or 5 ppt
        bindsym Shift+Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym $mod+r mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

## www
mode "www" {
    # Email n WhatsApp
    bindsym e   workspace $ws4;\
        exec --no-startup-id $browser -new-window -url web.whatsapp.com;\
        exec --no-startup-id $browser -new-tab -url inbox.google.com -new-tab -url inbox.google.com/u/1;\
        layout tabbed;\
        mode "default"
    
    # Empty Chrome
    bindsym Return  workspace $ws5;\
        exec --no-startup-id $browser;\
        layout tabbed;\
        mode "default"

    bindsym $mod+i  mode "default"
    bindsym Escape  mode "default"
}
bindsym $mod+i mode "www"

